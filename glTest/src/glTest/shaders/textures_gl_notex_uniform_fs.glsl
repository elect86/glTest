#version 410

// Uniforms / SSBO ----------------------------------------------------------------------------------------------------

// Input --------------------------------------------------------------------------------------------------------------
in block {
    vec2 v2TexCoord;
    flat int iDrawID;
} In;

//  Output ------------------------------------------------------------------------------------------------------------
layout(location=0) out vec4 Out_v4Color;

// Functions ----------------------------------------------------------------------------------------------------------
void main()
{
    int drawID = int(In.iDrawID);
    if (drawID % 2 == 0) {
        Out_v4Color = vec4(1, 0, 0, 1);
    } else {
        Out_v4Color = vec4(0, 0, 1, 1);
    }
}
